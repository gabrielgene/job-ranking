generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id String @id @default(uuid())

    email    String @unique
    password String
    type     String

    junior  Junior?
    company Company?
    senior  Senior?
}

model Junior {
    id String @id @default(uuid())

    name   String
    bio    String
    user   User   @relation(fields: [userId], references: [id])
    userId String @unique

    ratings Rating[]
}

model Senior {
    id     String   @id @default(uuid())
    name   String
    bio    String
    user   User     @relation(fields: [userId], references: [id])
    userId String   @unique
    Rating Rating[]
}

model Company {
    id     String @id @default(uuid())
    name   String
    bio    String
    status String @default("PENDING")

    user   User   @relation(fields: [userId], references: [id])
    userId String @unique
}

model Rating {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    content   String?
    score     Int      @default(0)

    owner   Senior? @relation(fields: [ownerId], references: [id])
    ownerId String?

    junior   Junior? @relation(fields: [juniorId], references: [id])
    juniorId String?
}
