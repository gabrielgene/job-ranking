generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id String @id @default(uuid())

    email    String @unique
    password String
    type     String
    name     String
    bio      String
    status   String @default("PENDING")

    ratings Rating[]

}

model Rating {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    content   String?
    score     Int      @default(0)

    ownerId String?

    user   User?   @relation(fields: [userId], references: [id])
    userId String?
}
