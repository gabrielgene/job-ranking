generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id       Int      @id @default(autoincrement())
    email    String   @unique
    password String
    type     String
    junior   Junior?
    company  Company?
    senior   Senior?
    // Post     Post[]
}

model Junior {
    id     Int    @id @default(autoincrement())
    name   String
    bio    String
    user   User   @relation(fields: [userId], references: [id])
    userId Int    @unique
}

model Senior {
    id     Int    @id @default(autoincrement())
    name   String
    bio    String
    user   User   @relation(fields: [userId], references: [id])
    userId Int    @unique
}

model Company {
    id     Int    @id @default(autoincrement())
    name   String
    bio    String
    user   User   @relation(fields: [userId], references: [id])
    userId Int    @unique
}

